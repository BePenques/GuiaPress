<%- include('../../partials/header.ejs'); %>
<%- include('../../partials/homenavbar.ejs'); %>
<body>
    <div class="container">
        <hr>
        <div class="jumbotron">
            <h1 class="display-4">Bem vindo!</h1>
            <p class="lead">Este é um blog simples</p>
            <hr class="my-4">
            <!-- <p>ele usa classes utilitarias</p> -->
            <a class ="btn btn-primary btn-lg" href="#" role="button">Leia mais...</a>
        </div>
        <hr>
        <% result.articles.rows.forEach(article =>{ %>
            <div class="card">
                <div class="card-header">
                    <h2><%= article.title %></h2>
                </div>
                <div class="card-body">
                    <a class="btn btn-success" href="/<%= article.slug %>">Ler artigo</a>
                </div>
            </div>
            <br>
        <% }) %>
      
        <div class="row">
            <div class="col col-12">
                <% if(result.page > 2) {%>
                    <a style="float: left;" href="/articles/page/<%= result.page - 1 %>"> << Anterior </a>         
                <% } else if(result.page == 2) { %>
                    <a style="float: left;" href="/"> << Anterior </a> 
                <% } %>
            </div>
            <hr>
        </div>
       
      
        <div class="row">
            <div class="col col-12">
                <% if(result.next) { %>
                    <a style="float: right;" href="/articles/page/<%= result.page + 1 %>">Próximo >></a>         
                <% } %>
            </div>
            <hr>
        </div>
    </div>
</body>
<%- include('../../partials/footer.ejs'); %>